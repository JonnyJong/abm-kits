body
	scrollbar-color var(--theme) var(--bg)

main
	display grid
	width 100%
	height 100%
	grid-template-columns auto 1fr auto
	grid-template-rows 1fr
	gap 8px
	grid-auto-flow row
	grid-template-areas 'projects picker detail'

.projects
	width 250px
	grid-area projects

.picker
	grid-area picker

.detail
	width 250px
	grid-area detail

.icon
	display block
	// font-size var(--scale, 128px)
	width var(--scale, 128px)
	height var(--scale, 128px)
	transition .1s opacity
	contain-intrinsic-size auto var(--scale)
	content-visibility auto
	&[ui-hover]
		opacity 1
	&[ui-active]
		opacity .5

@media (prefers-color-scheme dark)
	.icon
		filter invert(1)
		&[src$='color.svg']
			filter invert(0)

@import 'styles/**/*'
