// Heading
h1
h2
h3
h4
h5
h6
	margin 0
	word-break break-word
	font-weight 600

h1
	font-size 68px
	line-height 92px

h2
	font-size 40px
	line-height 52px

h3
	font-size 32px
	line-height 40px

h4
	font-size 28px
	line-height 36px

h5
	font-size 24px
	line-height 32px

h6
	font-size 20px
	line-height 26px

// Presets
.ui-preset-fullscreen
	position fixed
	z-index 50
	width 100%
	height 100%
	inset 0

.ui-preset-center
	margin auto
	inset 0

// Panel
[ui-panel]
	background var(--ui-panel-bg)

[ui-panel='large']
	padding 24px
	border-radius 8px

[ui-panel='middle']
	padding 12px
	border-radius 6px

// Layout
[ui-layout='flow']
[ui-layout='flow-column']
	display flex
	flex-wrap wrap
	gap 8px

[ui-layout='flow-column']
	flex-direction column
