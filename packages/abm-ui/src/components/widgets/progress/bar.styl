:host
	display block
	overflow hidden
	padding 2px 0
	border-radius 5px

.track
	position relative
	width 100%
	height 1px
	border-radius inherit
	background var(--w-progress-bar-track)

@keyframes start
	0%
		width 0%

.thumb
	position absolute
	top -2px
	left 0%
	width calc(var(--progress) * 2)
	height 5px
	border-radius inherit
	background var(--theme)
	transition .2s background, .1s left, .1s width
	animation start .1s ease-in-out
	translate -50% 0

@keyframes size
	40%
		width 50%
	0%
	80%
	100%
		width 10%

@keyframes position
	0%
		left -15%
	80%
	100%
		left 115%

.waiting
	width 0%
	animation size 2s .1s ease-in-out infinite, position 2s .1s linear infinite

@keyframes size-2
	85%
		width 50%
	0%
	70%
	100%
		width 10%

@keyframes position-2
	0%
	70%
		left -15%
	100%
		left 115%

.track:has(.waiting):before
	@extend .thumb
	content ''
	animation size-2 2s .1s ease-in-out infinite, position-2 2s .1s linear infinite
