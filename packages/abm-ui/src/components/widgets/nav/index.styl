:host
	position relative
	display flex
	&[vertical]
		flex-direction column
		width max-content
		height 100%
		.indicator
			top calc(var(--offset) + 8px)
			left 0
			width 4px
			height calc(var(--size) - 16px)
			transition .2s top, .2s height
	&[vertical-display]
		.item
			flex-direction column
			gap 8px
		&:not([vertical])
			.item
				padding-top 12px
		&[vertical] .item :last-child
			overflow hidden
			max-width 100%
			text-overflow ellipsis
	&[display='icon']
		.item
			width 36px
			height 36px
	&[display='text']
		.item
			height 36px
			gap 0px
			:first-child
				width 0px
				height 0
				opacity 0
				scale 0
			:last-child
				width 100%
	&[disabled]
		.item
			&[ui-hover]
			&[ui-active]
				background none
				&>*
					opacity 1

.item
	display flex
	align-items center
	overflow hidden
	padding 8px
	border-radius var(--ui-border-radius)
	transition .1s background, .3s width, .3s height, .3s gap
	gap 12px
	interpolate-size allow-keywords
	&:not([disabled])
		&[ui-hover]
			background var(--w-nav-hover-bg)
		&[ui-active]
			background var(--w-nav-active-bg)
			&>*
				opacity var(--w-nav-active-content-opacity)
	:first-child
		flex 0 0 auto
		overflow hidden
		height calc-size(auto, size)
		font-size 20px
		transition .3s width, .3s height, .3s opacity, .3s scale
		--w-progress-ring-size 20px
	:last-child
		width calc-size(auto, size)
		line-height 20px
		transition .3s width
	&[disabled]
		opacity var(--w-nav-disabled-opacity)

.flex
	flex 1
	*
		display none

.indicator
	position absolute
	top 0
	left calc(var(--offset) + 8px)
	width calc(var(--size) - 16px)
	height 4px
	border-radius var(--ui-border-radius)
	background var(--theme)
	transition .2s left, .2s width

@media (prefers-reduced-motion reduce)
	.indicator
		transition none
