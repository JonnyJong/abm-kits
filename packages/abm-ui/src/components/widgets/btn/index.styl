:host
	position relative
	display flex
	justify-content center
	align-items center
	overflow hidden
	padding 4px 7px
	min-width 32px
	min-height 32px
	width max-content
	border 1px solid var(--w-btn-border)
	border-radius var(--ui-border-radius)
	background var(--w-btn-bg)
	transition .1s background, .2s opacity
	gap 4px
	&[flat]
		border-color #0000
		--w-btn-bg #0000
	&[rounded]
		border-radius 10000vmax
	&[state='primary']
	&[state='toggle'][checked]
		color var(--theme-text)
		--w-btn-bg var(--theme-ad)
		--w-btn-border var(--theme)
		--w-btn-hover-bg var(--theme)
		--w-btn-active-bg var(--theme-ab)
		--w-btn-delay var(--theme)
		.progress
			--theme var(--theme-text)
	&[state='danger']
		--w-btn-bg var(--w-btn-danger-bg)
		--w-btn-border var(--w-btn-danger-border)
		--w-btn-hover-bg var(--w-btn-danger-hover-bg)
		--w-btn-active-bg var(--w-btn-danger-active-bg)
		.progress
			--theme var(--text)
	&:not([disabled])
		&[ui-hover]
			background var(--w-btn-hover-bg)
		&[ui-active]
			background var(--w-btn-active-bg)
			opacity var(--w-btn-active-opacity)
			.delay
				opacity 1
				transition 0s
	&[disabled]
		opacity var(--w-btn-disabled-opacity)

.progress
	position absolute
	top 0
	left -2px
	width calc(100% + 4px)
	--w-progress-bar-track #0000

.delay
	position absolute
	z-index -1
	width 10%
	height 100%
	background var(--w-btn-delay)
	opacity 0
	transition 0s .2s width, .2s opacity
	inset 0
