:host
	position relative
	display block
	padding 9px
	--size 12px
	&:not([disabled])
		.thumb
			&[ui-hover]
				--size 16px
			&[ui-slide]
				--size 8px
		&[ui-slide='0'] .thumb:nth-child(2)
		&[ui-slide='1'] .thumb:nth-child(3)
			--size 8px
	&.w-range-sliding
		.track:before
		.thumb
			transition none
	&[disabled]
		.track:before
		.thumb:after
			opacity .7

.track
	position relative
	height 4px
	border-radius var(--ui-border-radius)
	background var(--w-slider-track)
	&:before
		position absolute
		left s('min(var(--w-range-a, 0%), var(--w-range-b, 0%))')
		display block
		width s('max(calc(var(--w-range-a, 0%) - var(--w-range-b, 0%)), calc(var(--w-range-b, 0%) - var(--w-range-a, 0%)))')
		height 100%
		border-radius var(--ui-border-radius)
		background var(--w-slider-cover)
		content ''
		transition .1s width, .1s left

.thumb
	position absolute
	top 0
	left var(--w-range-a, 0%)
	width 22px
	height 22px
	border-radius s('min(calc(var(--ui-border-radius) * 1e6), 100%)')
	background var(--w-slider-thumb-back)
	transition .1s translate, .1s left
	translate calc(var(--w-range-a, 0%) * -1) 0
	&:before
	&:after
		position absolute
		margin auto
		border-radius s('min(calc(var(--ui-border-radius) * 1e6), 100%)')
		content ''
		inset 0
	&:before
		width 20px
		height 20px
		background var(--w-slider-thumb)
	&:after
		width var(--size)
		height var(--size)
		background var(--w-slider-thumb-front)
		transition .2s width, .2s height
	&:nth-child(3)
		left var(--w-range-b, 0%)
		translate calc(var(--w-range-b, 0%) * -1) 0
