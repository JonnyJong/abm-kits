:host
	position relative
	display inline-flex
	justify-content center
	align-items center
	box-sizing border-box
	width 28px
	height 28px
	border 2px solid
	border-radius 50%
	font-weight 900
	&[w-hint-gamepad='a']
		color var(--w-hint-gamepad-a)
	&[w-hint-gamepad='b']
		color var(--w-hint-gamepad-b)
	&[w-hint-gamepad='x']
		color var(--w-hint-gamepad-x)
	&[w-hint-gamepad='y']
		color var(--w-hint-gamepad-y)
	&[w-hint-gamepad='lb']
	&[w-hint-gamepad='rb']
		border-radius 4px
		font-weight normal
	&[w-hint-gamepad='lt']
		border-radius 4px 4px 4px 50%
		font-weight normal
	&[w-hint-gamepad='rt']
		border-radius 4px 4px 50% 4px
		font-weight normal

.press
	position absolute
	width 100%
	height 100%
	inset 0
	&:before
	&:after
		position absolute
		bottom 2px
		left 5px
		display block
		width 8px
		height 2px
		background var(--text)
		content ''
		rotate 30deg
	&:after
		left 11px
		rotate -30deg
