@keyframes ui-dialog-filter
	0%
		opacity 0

.ui-dialog-filter
	background var(--ui-dialog-filter-bg)
	animation .3s .1s ui-dialog-filter ease-out backwards

@keyframes ui-dialog
	0%
		scale 0

.ui-dialog
	position fixed
	z-index 50
	overflow hidden
	min-width s('min(calc(100vw - 16px), 400px)')
	width max-content
	height max-content
	border 1px solid var(--ui-dialog-border)
	border-radius 4px
	background var(--ui-dialog-bg)
	animation 1s .1s ui-dialog cubic-bezier(0, 1, 0, 1) backwards
	backdrop-filter blur(8px)
	&>*
		padding 16px
	&:after
		position absolute
		bottom 49px
		left 0
		width 100%
		height 16px
		background linear-gradient(transparent 0%, var(--bg) 100%)
		content ''
		pointer-events none
	&:has(.ui-dialog-actions:empty):after
		bottom 0

.ui-dialog-title
	display flex
	align-items center
	font-size 32px
	gap 8px

.ui-dialog-content
	overflow hidden overlay
	padding-top 0
	max-height calc(100vh - 146px)

.ui-dialog-actions
	display flex
	padding 8px
	background var(--ui-dialog-action-bg)
	gap 8px
	&:empty
		display none

.ui-dialog-action
	flex 1 0 auto
