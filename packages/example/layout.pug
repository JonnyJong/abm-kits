h1 ABM UI
h2 Settings
div(ui-panel="large" ui-layout="flow-column")
	div Theme
	w-color#settings-theme
	div Color Scheme
	w-select#settings-schema
h2 Event
div(ui-panel="large" ui-layout="flow-column")
	h3 Hover
		div(ui-panel="middle")
			#events-hover
	h3 Active
		div(ui-panel="middle" ui-layout="flow")
			- var i = 0
			while i < 10
				div(id=`events-active-${i++}`)
			#events-active-10(style="width:100%;height:208px;")
	h3 Slide
		#event-slide-panel(ui-panel="middle")
			- var i = 0
			while i < 10
				div(id=`events-slide-${i++}`)
h2 Keyboard
div(ui-panel="large" ui-layout="flow-column")
	h3 Pressing
	div#keyboard-pressing(ui-panel="middle" ui-layout="flow" style="min-height:52px;" ui-nav)
	h3 Shortcuts
	div#keyboard-shortcuts(ui-panel="middle" ui-layout="flow-column" ui-nav)
	h3 Alias
	div#keyboard-alias(ui-panel="middle" ui-layout="flow-column" ui-nav)
h2 GameController
div#dev-gamepad(ui-panel="large" style="display: flex;")
	w-gamepad(target="0")
