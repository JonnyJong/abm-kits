w-hint
	div(slot="mouse")
		='Use'
		w-hint-mouse Left
		='to active a button, and use'
		w-hint-key ArrowUp
		w-hint-key ArrowRight
		w-hint-key ArrowDown
		w-hint-key ArrowLeft
		='to navigate.'
	div(slot="gamepad")
		='Use'
		w-hint-gamepad A
		='to active a button, and use'
		w-hint-gamepad Up
		w-hint-gamepad Right
		w-hint-gamepad Down
		w-hint-gamepad Left
		='to navigate.'
	div(slot="touch")
		='Use'
		w-hint-touch Tap
		='to active a button.'
	div(slot="pen")
		='Use'
		w-hint-pen Tap
		='to active a button, and use'
		w-hint-key ArrowUp
		w-hint-key ArrowRight
		w-hint-key ArrowDown
		w-hint-key ArrowLeft
		='to navigate.'
