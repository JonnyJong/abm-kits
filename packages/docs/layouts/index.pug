doctype html
html(lang=language)
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title=title + ' - ABM Docs'
		link(rel="shortcut icon" href="/abm-kits/favicon.png")
		//- title=(title === '@INDEX' ? 'ABM Docs' : title + ' - ABM Docs')
		link#assets-icon(rel="stylesheet" href="/abm-kits/icon/icon.css")
		link(rel="stylesheet" href="/abm-kits/deps/abm.css")
		link(rel="stylesheet" href="/abm-kits/main.css")
		link(rel="stylesheet" href="/abm-kits/doc.css")
		link(rel="stylesheet" href="/abm-kits/index.css")
		script!=localeJS
		script!=languagesJS
		script(src="/abm-kits/deps/abm.js")
		script(src="/abm-kits/main.js")
		script(src="/abm-kits/doc.js")
		script(src="/abm-kits/index.js")
	body
		include include/nav
		include include/aside
		main
			header
				h1=title
				#source(data-list=JSON.stringify(source))
			article
				ul.docs
					each item in [...items.values()]
						li.doc-item
							a(href="/abm-kits/" + language + "/" + item.data.url)
								if item.data.icon
									w-icon.doc-icon(key=item.data.icon)
								.doc-title=item.data.title
				!=content
